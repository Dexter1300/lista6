<Window x:Class="lista6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lista6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Dodaj" Grid.Row="0" Click="Button_Click" Height="30" Width="100" Margin="96,55,96,125"/>
        <Button Content="Refresh" Grid.Row="0" Click="Button_Click3" Height="30" Width="100" Margin="96,85,96,15"/>
        <Button Content="Wyświetl" Grid.Row="0" Click="Button_Click2" Height="30" Width="100"/>
        <Button Content="Load" Grid.Row="0" Click="Button_Click5" Height="30" Width="100" Margin="96,20,96,160"/>
        <Button Content="Connect" Grid.Row="0" Click="Button_Click6" Height="30" Width="100" Margin="96,160,96,20"/>
        <TextBox Grid.Row="0" Height="25" Width="25" Margin="140,5,10,5" Name="id" PreviewTextInput="Id_PreviewTextInput"/>
        
    </Grid>
</Window>
